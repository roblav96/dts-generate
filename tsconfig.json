{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noErrorTruncation": true,
		"noImplicitThis": true,
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "es2015"
	},
	"exclude": ["dist", "node_modules"],
	"include": ["src/**/*.ts"]
}
